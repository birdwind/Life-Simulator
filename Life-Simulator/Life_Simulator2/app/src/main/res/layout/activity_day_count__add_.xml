<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_list__add_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.waterball.life_simulator2.CheckList.CheckList_Add_Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_TXV"
        android:text="標題 : "
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        android:layout_alignTop="@+id/title_EDT" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_EDT"
        android:ems="10"
        android:hint="標題輸入於此"
        android:layout_toRightOf="@+id/title_TXV"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_TXV"
        android:text="時間 : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/title_TXV"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date_EDT"
        android:layout_alignBaseline="@+id/date_TXV"
        android:layout_alignBottom="@+id/date_TXV"
        android:layout_toEndOf="@+id/date_TXV"/>

    <Button
        android:text="確定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_EDT"
        android:layout_alignEnd="@+id/title_EDT"
        android:layout_marginTop="40dp"
        android:id="@+id/add_BTN" />


</RelativeLayout>
